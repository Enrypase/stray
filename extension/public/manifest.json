{
    "short_name": "Chat",
    "name": "Chat",
    "description": "Web3 Chat",
    "manifest_version": 3,
    "version": "0.1.0",
    "action": {
      "default_popup": "index.html",
      "default_title": "open",
      "default_icon": {
        "192": "logo192.png"
      }
    },
    "permissions": [
      "scripting",
      "storage",
      "activeTab",
      "declarativeContent",
      "tabs",
      "notifications"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "*"
    ]
  }
  